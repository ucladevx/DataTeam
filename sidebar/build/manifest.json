{
  "name": "Inject sidebar",
  "manifest_version": 2,
  "description": "Inject a sidebar on the current tab when the page action is clicked",
  "version": "0.2",
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Inject sidebar"
  },
  "content_scripts": [
    {
      "js": [ "content.js"],
      "matches": [ "*://calendar.google.com/*"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}